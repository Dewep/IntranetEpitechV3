<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#4277ff"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/intranet_epitech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intranet Epitech"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_login_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="#ff2454"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_login_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789-_"
                android:hint="Login" />

            <EditText
                android:id="@+id/activity_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="UNIX password"
                android:inputType="textPassword" />

            <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
                android:id="@+id/activity_login_progress"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:background="#4277ff" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/activity_login_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:text="Connexion"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>